{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jezweb/claude-skills/admin/profile-schema.json",
  "title": "Admin Device Profile",
  "description": "Schema for device profiles managed by the admin skill",
  "type": "object",
  "required": ["deviceInfo"],
  "properties": {
    "deviceInfo": {
      "type": "object",
      "description": "Core device identification",
      "required": ["name", "platform", "hostname", "user", "lastUpdated"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique device identifier (DEVICE_NAME)",
          "pattern": "^[a-zA-Z0-9][a-zA-Z0-9-]*$"
        },
        "platform": {
          "type": "string",
          "enum": ["windows", "wsl", "linux", "macos"],
          "description": "Operating platform"
        },
        "hostname": {
          "type": "string",
          "description": "System hostname"
        },
        "user": {
          "type": "string",
          "description": "Primary admin user (ADMIN_USER)"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of last profile update"
        }
      }
    },
    "installedTools": {
      "type": "object",
      "description": "Map of tool name to installation details",
      "additionalProperties": {
        "type": "object",
        "required": ["version", "installedVia", "lastChecked"],
        "properties": {
          "version": {
            "type": "string",
            "description": "Installed version"
          },
          "installedVia": {
            "type": "string",
            "description": "Installation method",
            "examples": ["apt", "brew", "winget", "scoop", "npm", "pip", "cargo", "manual"]
          },
          "path": {
            "type": "string",
            "description": "Installation path (optional)"
          },
          "lastChecked": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of last version check"
          },
          "config": {
            "type": "object",
            "description": "Tool-specific configuration metadata",
            "additionalProperties": true
          }
        }
      }
    },
    "managedServers": {
      "type": "array",
      "description": "Server IDs from admin-servers inventory",
      "items": {
        "type": "string",
        "description": "Server identifier (matches SERVER_<ID> in inventory)"
      }
    },
    "cloudProviders": {
      "type": "object",
      "description": "Configured cloud provider accounts",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "configured": {
            "type": "boolean",
            "description": "Whether credentials are configured"
          },
          "defaultRegion": {
            "type": "string",
            "description": "Default region for this provider"
          },
          "lastUsed": {
            "type": "string",
            "format": "date-time",
            "description": "Last time this provider was used"
          }
        }
      }
    },
    "syncSettings": {
      "type": "object",
      "description": "Cross-device sync configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "syncPath": {
          "type": "string",
          "description": "Path to synced folder"
        },
        "lastSync": {
          "type": "string",
          "format": "date-time"
        },
        "linkedDevices": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Other device names in sync group"
        }
      }
    },
    "customMetadata": {
      "type": "object",
      "description": "User-defined metadata",
      "additionalProperties": true
    }
  }
}
