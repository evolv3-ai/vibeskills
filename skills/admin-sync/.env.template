# Windows-WSL Coordination Environment Configuration
# Copy this file to .env.local in your admin project directory
# DO NOT commit .env.local to version control

# =============================================================================
# WSL CONFIGURATION
# =============================================================================
# Default WSL distribution
WSL_DISTRO=Ubuntu-24.04

# WSL admin home directory (from Windows perspective)
WSL_ADMIN_PATH=\\wsl$\Ubuntu-24.04\home\wsladmin\dev\wsl-admin

# WSL admin home directory (from WSL perspective)
WSL_ADMIN_PATH_LINUX=/home/wsladmin/dev/wsl-admin

# =============================================================================
# RESOURCE ALLOCATION
# =============================================================================
# Memory allocation for WSL2 VM
WSL_MEMORY=16GB

# Number of processors for WSL2 VM
WSL_PROCESSORS=8

# Swap size for WSL2 VM
WSL_SWAP=4GB

# =============================================================================
# PATHS
# =============================================================================
# .wslconfig location
WSLCONFIG_PATH=${USERPROFILE}\.wslconfig

# Shared directory (accessible from both Windows and WSL)
SHARED_PATH=D:\shared
SHARED_PATH_WSL=/mnt/d/shared

# =============================================================================
# CROSS-PLATFORM ADMIN ROOT
# =============================================================================
# Admin root from Windows
ADMIN_ROOT=N:/Dropbox/Admin

# Admin root from WSL (same location, different path)
ADMIN_ROOT_WSL=/mnt/n/Dropbox/Admin

# =============================================================================
# HANDOFF LOGGING
# =============================================================================
# Tag for Windows-initiated handoffs
WIN_HANDOFF_TAG=[REQUIRES-WSL-ADMIN]

# Tag for WSL-initiated handoffs
WSL_HANDOFF_TAG=[REQUIRES-WINADMIN]

# =============================================================================
# GIT CONFIGURATION
# =============================================================================
# Line ending handling
GIT_AUTOCRLF=true

# Use Windows Git Credential Manager from WSL
USE_WINDOWS_GCM=true
