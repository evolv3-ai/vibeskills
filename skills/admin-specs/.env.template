# Device Profile Management Environment Configuration
# Copy this file to .env.local in your admin project directory
# DO NOT commit .env.local to version control

# =============================================================================
# ADMIN ROOT - Choose ONE option and uncomment
# =============================================================================

# Option A: Dropbox (recommended for personal use)
ADMIN_ROOT=N:/Dropbox/Admin

# Option B: OneDrive
# ADMIN_ROOT=${USERPROFILE}/OneDrive/Admin

# Option C: Network Share
# ADMIN_ROOT=\\\\server\\share\\Admin

# Option D: Local only (no sync)
# ADMIN_ROOT=D:/Admin

# =============================================================================
# DEVICE IDENTIFICATION
# =============================================================================
# Device name (defaults to $env:COMPUTERNAME)
DEVICE_NAME=${COMPUTERNAME}

# =============================================================================
# DERIVED PATHS (auto-calculated from ADMIN_ROOT)
# =============================================================================
# Device-specific directory
DEVICE_PATH=${ADMIN_ROOT}/devices/${DEVICE_NAME}

# Device profile (source of truth for installed tools)
DEVICE_PROFILE=${DEVICE_PATH}/profile.json

# Device-specific log file
DEVICE_LOGS=${DEVICE_PATH}/logs.txt

# =============================================================================
# CENTRAL LOGS (cross-device visibility)
# =============================================================================
CENTRAL_LOGS=${ADMIN_ROOT}/logs/central

# Individual central log files
OPERATIONS_LOG=${CENTRAL_LOGS}/operations.log
INSTALLATIONS_LOG=${CENTRAL_LOGS}/installations.log
SYSTEM_CHANGES_LOG=${CENTRAL_LOGS}/system-changes.log

# =============================================================================
# REGISTRIES
# =============================================================================
# MCP server registry
MCP_REGISTRY=${ADMIN_ROOT}/registries/mcp-registry.json

# =============================================================================
# SYNC SETTINGS
# =============================================================================
# Sync provider: dropbox, onedrive, network, local, git
SYNC_PROVIDER=dropbox

# Conflict resolution: newest, merge, manual
CONFLICT_RESOLUTION=merge

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Include timestamps in console output
LOG_TIMESTAMPS=true

# =============================================================================
# PROFILE SETTINGS
# =============================================================================
# Schema version (do not change unless upgrading)
PROFILE_SCHEMA_VERSION=1.0

# Auto-update lastChecked on tool verification
AUTO_UPDATE_TIMESTAMPS=true
